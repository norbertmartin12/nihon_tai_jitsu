<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".QuestionFragment">

    <TextView
        android:id="@+id/text_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="24sp" />

    <include layout="@layout/content_answer"
        android:id="@+id/content_answer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_question"
        android:layout_above="@id/button_next_question"
        />

    <Button
        android:id="@+id/button_view_answer"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/question_see_answer"
        android:layout_below="@id/text_question"
        android:layout_above="@id/button_next_question"/>

    <Button
        android:id="@+id/button_next_question"
        style="@style/ColoredButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/question_next" />

</com.google.android.material.circularreveal.CircularRevealRelativeLayout>
